{
  "name": "@breedhub/signal-store",
  "version": "0.0.1",
  "description": "React SignalStore - Fractal State Management with IndexedDB support",
  "author": "BreedHub Team",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "immer": "^10.1.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.45",
    "@vitest/coverage-v8": "^1.6.1",
    "fake-indexeddb": "^6.1.0",
    "jsdom": "^26.1.0",
    "react": "^18.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "keywords": [
    "react",
    "state-management",
    "signal-store",
    "zustand",
    "indexeddb",
    "offline-first",
    "fractal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/breedhub/signal-store"
  },
  "bugs": {
    "url": "https://github.com/breedhub/signal-store/issues"
  }
}